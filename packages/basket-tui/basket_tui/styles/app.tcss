/* Pi TUI â€” native feel: no box, no visible scrollbar; scroll + trackpad unchanged */

#output-container {
    height: 1fr;
    margin: 0 1;
}

/* Output: read-only TextArea for selectable text (click, drag, double-click) */
#output {
    height: 1fr;
    min-height: 0;
    padding: 1 2;
    scrollbar-size: 0 0;
    border: none;
}

.message-block {
    width: 100%;
    padding: 1 2;
    margin: 0 0 1 0;
}

.message-user {
    background: $surface-darken-1;
}

.message-assistant {
    background: transparent;
    padding: 1 2;
}

.message-system {
    color: $text-muted;
    padding: 0 2;
    background: transparent;
}

.message-tool {
    color: $warning;
    padding: 0 1;
}

.tool-block {
    width: 100%;
    padding: 1 2;
    margin: 0 0 1 0;
    background: $surface-darken-1;
}

.tool-block--claude {
    padding: 1 2;
}

#todo-panel {
    height: auto;
    min-height: 1;
    max-height: 8;
    padding: 0 1;
    border: none;
    color: $text-muted;
}

#plan-mode-panel {
    height: auto;
    min-height: 1;
    padding: 0 1;
    border: none;
    color: $text-muted;
}

#input {
    dock: bottom;
    height: auto;
    min-height: 3;
    max-height: 10;
    border: solid $surface-darken-2;
    margin: 0 1;
}

.thinking {
    color: $text-muted;
    text-style: italic;
}

.tool-call {
    color: $success;
    text-style: bold;
}

.error {
    color: $error;
}
